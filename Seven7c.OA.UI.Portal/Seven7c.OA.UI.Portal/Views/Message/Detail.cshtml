@model Seven7c.OA.Model.Messsage

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Detail</title>
    <link href="~/Content/tableStyle.css" rel="stylesheet" />
</head>
<body>
    <div>
        <table>
            <tr>
                <th colspan="2">
                    查看消息
                </th>
            </tr>

            <tr>
                <td>标题:</td>
                <td>
                   @Model.Title
                </td>
            </tr>

            <tr>
                <td>
                    内容:
                </td>
                <td>
                   @Html.Raw(Model.Content)
                </td>
            </tr>

            <tr>
                <td>附件:</td>

                <td>
                @if (string.IsNullOrEmpty(Model.FileUrl))
                {
                    @Html.Raw("无附件..")
                }
                else
                {
                    <a href="@Model.FileUrl">下载附件</a>
                }
                </td>
            </tr>

            <tr>
                <td>发送人:</td>
                <td>@Model.UserInfo.UName</td>
            </tr>



            <tr>
                <td>
                    发送时间:
                </td>
              
                <td >
                   @Model.SendTime
                </td>
            </tr>
        </table>
    </div>
</body>
</html>
